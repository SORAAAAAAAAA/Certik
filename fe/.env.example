# Certik App Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# Supabase Configuration
# ===========================================
EXPO_PUBLIC_SUPABASE_URL=your_supabase_project_url
EXPO_PUBLIC_SUPABASE_PUBLISHABLE_DEFAULT_KEY=your_supabase_publishable_key

# ===========================================
# Pinata IPFS Configuration
# Get your JWT from https://app.pinata.cloud/developers/api-keys
# ===========================================
EXPO_PUBLIC_PINATA_JWT=your_pinata_jwt_token
EXPO_PUBLIC_PINATA_GATEWAY=https://your-gateway.mypinata.cloud/ipfs

# ===========================================
# Blockchain Configuration
# ===========================================
# Your deployed CertificateNFT contract address
EXPO_PUBLIC_CONTRACT_ADDRESS=your_contract_address

# RPC URL for Base Sepolia (or your chosen network)
EXPO_PUBLIC_BASE_SEPOLIA_RPC=https://base-sepolia.g.alchemy.com/v2/your_api_key

# ===========================================
# Owner Wallet (for minting - KEEP SECRET!)
# ===========================================
# The private key of the wallet that owns the contract
# This wallet must have funds for gas fees
EXPO_PUBLIC_OWNER_PRIVATE_KEY=your_wallet_private_key
